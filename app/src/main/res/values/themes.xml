<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General information - http://www.vogella.com/tutorials/AndroidStylesThemes/article.html -->

    <style name="AppTheme" parent="AppTheme.Base"/>

    <!-- Refer - http://android-developers.blogspot.de/2014/10/appcompat-v21-material-design-for-pre.html-->

    <!-- NoActionBar theme to disable the default decor-provided Action Bar to permit the
     setSupportActionBar() using the layout provided Toolbar -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- These values don't directly set the styling for the Toolbar, they only do it for the ActionBar.
            The Toolbar styling is set in the layout via its own ThemeOverlay -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- ThemeOverlay styles only overwrite relevant attributes -->
    <!-- Refer - https://chris.banes.me/2014/11/12/theme-vs-style/ -->
    <style name="MyToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- As far as I can see, the underline styling is no longer available for the SearchView
    when using AppCompat 22.1.0. Previously it would be controlled by colorAccent -->

</resources>